{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": ["main.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "ignore": ["/node_modules/(?!ai)"]
  }
}
